<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>



    <!-- Style for the NavigationView -->
    <style name="CustomNavigationView">
        <item name="android:background">@color/navigation_background</item>
        <item name="android:textColor">@color/navigation_text_color</item>
    </style>

    <!-- Optional style for items (text/icon background) -->
    <style name="NavigationItemStyle">
        <item name="android:textColor">@color/navigation_item_text_color</item>
    </style>



    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
            <item name="android:windowFullscreen">true</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        </style>

        <style name="ButtonLogin" parent="@style/Theme.AppCompat.Light">
            <item name="android:textColor">@color/white</item>
            <item name="colorButtonNormal">@color/colorAccent</item>
            <item name="colorControlHighlight">@color/yellow</item>
        </style>

        <style name="ButtonSignUp" parent="@style/Theme.AppCompat.Light">
            <item name="android:textColor">@color/white</item>
            <item name="colorButtonNormal">@color/colorAccent</item>
            <item name="colorControlHighlight">@color/yellow</item>
        </style>




        <style name="RegistrationPage">
            <item name="android:textColorHint">@color/black</item>
            <item name="android:editTextColor">@color/black</item>
            <item name="android:colorControlNormal">@color/black</item>
            <item name="android:background">@color/BG</item>
        </style>

        <style name="ButtonWithShadow">
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">10sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:shadowColor">@color/black</item>
            <item name="android:shadowDx">1</item>
            <item name="android:shadowDy">1</item>
            <item name="android:shadowRadius">3</item>
        </style>

        <style name="LoginPageTitle">
            <item name="android:textSize">28sp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">bold</item>
            <item name="android:gravity">center</item>
            <item name="android:shadowColor">@color/gray</item>
            <item name="android:shadowDx">2</item>
            <item name="android:shadowDy">2</item>
            <item name="android:shadowRadius">4</item>
        </style>


</resources>
